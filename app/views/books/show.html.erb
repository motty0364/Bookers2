<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'shared/show_user_info', user: @user %>
      <%= render 'shared/new_book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.profile_image, size: "100x100" %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td><%= link_to @books.title, book_path(@books.id) %></td>
            <td><%= @books.body %></td>
            <% if @user == current_user %>
              <td>
                <%= link_to edit_book_path(@books.id), class: "btn btn-sm btn-success" do %>
                  Edit
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@books.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" do %>
                  Destroy
                <% end %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>